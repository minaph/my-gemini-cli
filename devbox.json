{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "nodejs_22@latest",
    "yarn@latest"
  ],
  "shell": {
    "init_hook": [
      "export $(grep -v '^\\s*#' .env | xargs)"
    ],
    "scripts": {
      "auth":  "cd $PROJECT_ROOT/gtasks-mcp && yarn && yarn start auth",
      "start": "./install.sh && cd $PROJECT_ROOT/workspace && gemini --yolo"
    }
  }
}
